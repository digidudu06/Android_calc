<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="계산기"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="첫번째 수 입력" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="두번쨰 수 입력" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plus"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#F5E76D"
            android:text="+"
            android:textSize="20dp" />
        <Button
            android:id="@+id/minu"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#94D8F7"
            android:text="-"
            android:textSize="20dp" />
        <Button
            android:id="@+id/mul"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#94FC98"
            android:text="*"
            android:textSize="20dp" />
        <Button
            android:id="@+id/div"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#F38D6D"
            android:text="/"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/eq"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:background="#8548F1"
            android:text="="
            android:textSize="20dp" />
        <Button
            android:id="@+id/reset"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:background="#FA4343"
            android:text="AC"
            android:textSize="20dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결과"
        android:textSize="20dp"
        android:layout_marginTop="30dp"/>
</LinearLayout>
